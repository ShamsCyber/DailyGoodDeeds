<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Outline Primary Button -->
    <style name="App.Button.Outlined.Primary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Outline Accent Button -->
    <style name="App.Button.Outlined.Accent" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



    <!-- Alarm Button -->
    <style name="App.Button.Small.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
